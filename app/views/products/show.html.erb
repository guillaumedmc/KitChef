<div class="container">
  <div class="conts text-center">
    <div class="card-show profile">
      <div class="card-content">
        <h3><%= @product.name %></h3>
        <%= cl_image_tag @product.photo, crop: :fill,:height=>200 , class: 'icon' %>
        <h4><strong>Category:</strong> <%= @product.category %></h4>
        <p class="text-justify"><%= @product.description %></p>
      </div>
    </div>

