        <h3><%= user.first_name %></h3>

        <%= cl_image_tag user.photo, :crop=>"thumb", :width=>200, :height=>200 ,:gravity=>"face",:zoom=>0.2, class: 'avatar-show' %>

        <p>Ratings</p>
        <i class="fas fa-star gold"></i>
        <i class="fas fa-star gold"></i>
        <i class="fas fa-star gold"></i>
        <i class="fas fa-star gold"></i>
        <h3><%= @product.price %></h3>
        <p>euros / person</p>
        <a href="#">All meal</a><span> |</span>
        <a href="#">Contact</a>
      </div>
    </div>

