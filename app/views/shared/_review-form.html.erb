<div class="container">
  <h1>What do you thing of <%= @product.name %>?</h1>

  <%= simple_form_for([@product, @review]) do |f| %>
    <%= f.input :rating, collection: [ 0, 1, 2, 3, 4, 5]  %>
    <%= f.input :content %>
    <%= f.submit "Submit your review", class: "btn btn-primary" %>
  <% end %>
</div>
